---
interface Props {
  project: {
    title: string;
    description: string;
    image: string;
    category: string;
    link: string;
  };
}

const { project } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
  <a href={project.link} class="block">
    <img
      src={project.image}
      alt={project.title}
      class="w-full h-64 object-cover"
    />
    <div class="p-6">
      <span class="text-sm text-primary font-medium">{project.category}</span>
      <h3 class="text-xl font-bold mt-2 mb-3">{project.title}</h3>
      <p class="text-gray-600">{project.description}</p>
    </div>
  </a>
</div>