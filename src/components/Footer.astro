---
const currentYear = new Date().getFullYear();
---

<footer class="bg-secondary text-white py-8 mt-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold mb-4">Contact</h3>
        <p>Email: your@email.com</p>
        <p>Location: Your City, Country</p>
      </div>
      <div>
        <h3 class="text-xl font-bold mb-4">Follow Me</h3>
        <div class="flex space-x-4">
          <a href="#" class="hover:text-primary">Twitter</a>
          <a href="#" class="hover:text-primary">Instagram</a>
          <a href="#" class="hover:text-primary">LinkedIn</a>
        </div>
      </div>
      <div>
        <h3 class="text-xl font-bold mb-4">Newsletter</h3>
        <form class="flex">
          <input
            type="email"
            placeholder="Enter your email"
            class="px-4 py-2 rounded-l text-gray-900"
          />
          <button class="bg-primary px-4 py-2 rounded-r hover:bg-primary/90">
            Subscribe
          </button>
        </form>
      </div>
    </div>
    <div class="text-center mt-8">
      <p>&copy; {currentYear} Your Name. All rights reserved.</p>
    </div>
  </div>
</footer>